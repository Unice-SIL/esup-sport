<div class="text-center">
  <p class="font-weight-bold">{{'security.login.shibboleth' | trans}}</p>
  <a aria-label="{{ 'security.shibboleth.login.submit'|trans }}" class="btn btn-outline-primary" href="{{ path('UcaWeb_ShibLogin') }}" rel="tooltip" role="button" title="{{ 'security.shibboleth.login.submit'|trans }}">
    {{ 'security.shibboleth.login.submit'|trans }}
  </a>
</div>

<hr class="col-12 col-md-6 mt-4">

{% if error %}
  <div class="alert alert-danger" role="alert" sr-only="">
    {{ error.messageKey|trans(error.messageData, 'security') }}
  </div>
{% endif %}

<div class="row mt-4 mb-4">

  <form action="{{ path("fos_user_security_check") }}" method="post" class="col-12 col-md-6 offset-md-3" novalidate >

    {% if csrf_token('authenticate') %}
      <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.refreshToken('authenticate') }}"/>
    {% endif %}

    <div class="form-group">
      <label for="username">{{ 'security.login.username'|trans }}</label>
      <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" autocomplete="username" aria-required="true"/>
    </div>

    <div class="form-group">
      <label for="password">{{ 'security.login.password'|trans }}</label>
      <input autocomplete="current-password" class="form-control" id="password" name="_password" required="required" type="password"/>
    </div>

    <div class="form-check">
      <input class="form-check-input" id="remember_me" name="_remember_me" type="checkbox" value="on"/>
      <label class="form-check-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    <div class="col text-center">
      <input class="btn btn-primary mt-3" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
    </div>

  </form>

</div>

<hr class="col-12 col-md-6 mt-4">

<div class="col text-center">
  <p class="font-weight-bold">{{'security.login.noninscrit' | trans}}</p>
  <a href="{{ url('UcaWeb_preInscription') }}" class="btn btn-primary mt-3">{{'accueil.demander.inscription' | trans | upper}}</a>
</div>

{% block javascripts %}
  <script>
  function validateForm() {
      return false;
  }
  </script>
{% endblock %}

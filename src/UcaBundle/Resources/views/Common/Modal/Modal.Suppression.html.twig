<!-- Modal -->
<div class="modal fade" id="modalSuppression" tabindex="-1" role="dialog" aria-labelledby="modalSuppressionTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="modalSuppressionLongTitle"> {{ 'message.confirmation.suppression.titre' | trans }} </h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{'message.confirmation.suppression' | trans }} 
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'bouton.retour'|trans }}</button>
        <a id="suppressionEntite" class="btn btn-primary">{{ 'bouton.supprimer'|trans }}</a>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
function showModal(href) {
        $("#suppressionEntite").attr('href', href);
}
</script>
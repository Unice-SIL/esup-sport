{% extends "@Uca/Common/Main/Structure.UcaGest.html.twig" %}
{% import '@Uca/Macros/ImagePreview.html.twig' as ImagePreview %}

{% block main %}
    {% include "@Uca/Common/Component/Bouton.Retour.html.twig" %}

    {% if (null == item.id) %}
        <h1>{{'materiel.ajouter.title'|trans}}</h1>
    {% else %}
        <h1>{{'materiel.modifier.title'|trans}}</h1>
    {% endif %}

    <!-- Message de saisie incorrecte -->
    {% if not form.vars.valid %}
        <div class="alert alert-danger" role="alert" sr-only="">
            {{ 'erreur.formulaire.champ.incorrect' | trans }}
        </div>
    {% endif %}

    <div class="well">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.libelle)}}
                {{ form_row(form.quantiteDisponible)}}
                {{ form_row(form.description)}}
            </div>
            <div class="col-md-6">
                {{ form_row(form.imageFile)}}
                {{ ImagePreview.html(item.image, 'ucabundle_materiel_imageFile_file') }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.tarif)}}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {{ form_row(form.save) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ ImagePreview.js }}
{% endblock %}

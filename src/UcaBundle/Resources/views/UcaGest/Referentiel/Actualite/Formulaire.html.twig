{% extends "@Uca/Common/Main/Structure.UcaGest.html.twig" %}
{% import '@Uca/Macros/ImagePreview.html.twig' as ImagePreview %}

{% block main %}
    <a class="btn btn-primary" href="{{ path('UcaGest_ActualiteLister') }}">
        <i class="fas fa-chevron-left"></i>
        {{ 'bouton.retour' | trans }}
    </a>
    {% if (null == item.id) %}
        <h1>{{'actualite.ajouter.title'|trans}}</h1>
    {% else %}
        <h1>{{'actualite.modifier.title'|trans}}</h1>
    {% endif %}

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <!-- Message de saisie incorrecte -->
    {% if not form.vars.valid %}
        <div class="alert alert-danger" role="alert" sr-only="">
            {{ 'erreur.formulaire.champ.incorrect' | trans }}
        </div>
    {% endif %}
    {{ form_row(form.titre) }}
    {{ form_row(form.texte) }}
    {{ form_row(form.imageFile) }}
    {{ ImagePreview.html(item.image, 'ucabundle_actualite_imageFile_file') }}
    {{ form_row(form.save) }}
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ ImagePreview.js }}
{% endblock %}

{% extends "UcaBundle/Email/TemplateEmail.html.twig" %}
{% block main %}
	<div>
        <p>
            {{ 'registration.email.message'|trans({ '%username%': user.username, '%confirmationUrl%': app.request.schemeAndHttpHost ~ path('security_confirm_account', { 'id': user.id, 'token' : user.confirmationToken })})|nl2br }}
            <br/><br/>
            {{ 'common.username'|trans }} : {{ user.username }}
            <br/>
            {{ 'security.login.password' }} : {{ plainPassword }}
        </p>
    </div>
{% endblock %}
<div aria-hidden="true" class="modal z-index-top fade" id="{{ block('modalId') }}" role="dialog" tabindex="-1">
    <div class="modal-dialog" role="document">
        {% block modalFormStart %}{% endblock %}
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-center text-center">
                <h2 aria-labelledby="{{ block('modalId') }}" class="modal-title fs-24 hide-border-title mt-5 mt-md-0">{{ block('modalTitle') | trans | upper }}</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <div class="image-presentation" aria-hidden="true">
                        <svg width="41" height="41">
                            <use href="{{ asset('images/remove.svg') ~ '#remove' }}" ></use>
                        </svg>
                    </div>
                </button>
            </div>
            <div class="modal-body">{{ block('modalBody') }}</div>
            <div class="modal-footer">
            {% block modalFooter %}
                 <button class="btn btn-secondary" data-dismiss="modal" type="button">{{ 'bouton.retour' | trans }}</button>
                 <a id="jsBoutonModal" class="btn btn-primary js-bouton-action d-block" type="button">{{ block('modalBoutonActionLibelle') }}</a>
            {% endblock %}
            </div>
        </div>
        {% block modalFormEnd %}{% endblock %}
    </div>
</div>

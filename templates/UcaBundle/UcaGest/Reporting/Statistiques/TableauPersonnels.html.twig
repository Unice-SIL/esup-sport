{% set percent_nombre_personnel_inscrit_annee_n = kpi_annee_n.nbPersonnels == 0 ? 0 : kpi_annee_n.nbInscrits * 100 / kpi_annee_n.nbPersonnels %}
{% set percent_nombre_personnel_inscrit_annee_n_1 = kpi_annee_n_1.nbPersonnels == 0 ? 0 : kpi_annee_n_1.nbInscrits * 100 / kpi_annee_n_1.nbPersonnels %}

<div class="container">
  <div class="row">
    <div class="col-12 table-bordered">
        {{ 'statistique.KPI.personnels.tableau.nbre_annee_n'|trans }} {{ kpi_annee_n.anneeUniversitaire }} : <b>{{ kpi_annee_n.nbPersonnels }}</b>
        <br/>
        {{ 'statistique.KPI.personnels.tableau.nbre_annee_n_1'|trans }} {{ kpi_annee_n_1.anneeUniversitaire }} : <b>{{ kpi_annee_n_1.nbPersonnels }}</b>
    </div>
  </div>

  <div class="row" style="background-color: rgba(0,0,0,.05);">
    <div class="col-4 table-bordered">
        {{ 'statistique.KPI.personnels.tableau.nbre_inscrits'|trans }} : <b>{{ kpi_annee_n.nbInscrits }}</b>
    </div>
    <div class="col-4 table-bordered">
        {{ 'statistique.KPI.personnels.tableau.percent_inscrit'|trans }} : <b>{{ percent_nombre_personnel_inscrit_annee_n|number_format(2, '.', ' ') }}%</b>
    </div>
    <div class="col-4 table-bordered">
       {{ 'statistique.KPI.personnels.tableau.rendement'|trans }} : <b>{{ percent_nombre_personnel_inscrit_annee_n > percent_nombre_personnel_inscrit_annee_n_1 ? '+' }}{{ (percent_nombre_personnel_inscrit_annee_n - percent_nombre_personnel_inscrit_annee_n_1)|number_format(2, '.', ' ') }}%</b>
    </div>
  </div>

  <div class="row">
    <div class="col-4 table-bordered">
        {{ 'statistique.KPI.personnels.tableau.nbr_par_categorie'|trans }}:
    </div>
    <div class="col-4 table-bordered">
        {{ 'statistique.KPI.personnels.tableau.cat_A'|trans }} : <b>{{ kpi_annee_n.getNbCatA() }}</b>
        {{ 'statistique.KPI.personnels.tableau.cat_B'|trans }} : <b>{{ kpi_annee_n.getNbCatB() }}</b>
        {{ 'statistique.KPI.personnels.tableau.cat_C'|trans }} : <b>{{ kpi_annee_n.getNbCatC() }}</b>
    </div>
    <div class="col-4 table-bordered">
        {{ 'statistique.KPI.personnels.tableau.cat_A'|trans }} : <b>{{ kpi_annee_n_1.getNbCatA() }}</b>
        {{ 'statistique.KPI.personnels.tableau.cat_B'|trans }} : <b>{{ kpi_annee_n_1.getNbCatB() }}</b>
        {{ 'statistique.KPI.personnels.tableau.cat_C'|trans }} : <b>{{ kpi_annee_n_1.getNbCatC() }}</b>
    </div>
  </div>

</div>
<style type="text/css">
    .center{
        text-align: center;
    }
    #title{
        text-decoration: underline;
        margin: 50px 0px 0px;
    }
    .texte{
        color: #717375;
        font-family: helvetica;
    }
    h4{
        margin-bottom: 25px;
    }   

</style>
<page backbottom="10mm" backleft="10mm" backright="10mm" backtop="10mm">
   
	<img alt="image_activite" src="{{ app.request.schemeAndHttpHost ~ app.request.baseUrl ~ '/build/images/logo_black.png'}}" style="align:left;"/>
    
    <h1 id="title" class="texte center" >{{'common.liste.inscription'|trans}}</h1>

    <h4 class="texte center">{{eventName}}:  {{evenement.dateDebut|date('d/m/Y H:i')}} - {{evenement.dateFin|date('d/m/Y H:i')}}</h4>

    <ol class="texte">
        {% for appel in appels %}
            {% if appel.statut == 'valide' %}
                {% if appel.utilisateur.telephone != null %}
                    <li><strong>{{appel.utilisateur.nom}} {{appel.utilisateur.prenom}}</strong>  ({{appel.utilisateur.telephone|telephone}})</li>
                {% else %}
                    <li><strong>{{appel.utilisateur.nom}} {{appel.utilisateur.prenom}}</strong></li>
                {% endif %}
            {% else %}
                <li><strong>{{appel.utilisateur.nom}} {{appel.utilisateur.prenom}}</strong> ({{'creneau.list.preinscrit'|trans}})</li>        
            {% endif %}
        {% endfor %}
    </ol>    
        
</page>
{% import 'UcaBundle/Macros/ImageAsset.html.twig' as ImageAsset %}

{% if item_actualite is not empty %}
    <section class="section-home">
        <div class="carousel slide" data-ride="carousel" id="carouselAccueil">
            <ol class="carousel-arrows">
                <a class="arrow-carousel" data-slide="prev" href="#carouselAccueil" role="button">
                    <i class="fas fa-angle-left"></i>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="arrow-carousel" data-slide="next" href="#carouselAccueil" role="button">
                    <i class="fas fa-angle-right"></i>
                    <span class="sr-only">Next</span>
                </a>
            </ol>
            <div class="carousel-social-media">
                <div>
                    <a aria-expanded="false" aria-haspopup="false" class="text-white" href="{{parametrage().lienFacebook}}" role="button">
                        <i class="fab fa-facebook-square"></i>
                    </a>
                    <a aria-expanded="false" aria-haspopup="false" class="text-white" href="{{parametrage().lienYoutube}}" role="button">
                        <i class="fab fa-youtube"></i>
                    </a>
                    <a aria-expanded="false" aria-haspopup="false" class="text-white" href="{{parametrage().lienInstagram}}" role="button">
                        <i class="fab fa-instagram"></i>
                    </a>
                </div>
            </div>
            <img class="img-fluid carousel-logo-uca" alt="UCA Sports" src="{{ asset('images/logo-uca.png') }}">
            <div class="pb-10 carousel-inner" role="listbox">
                {% for item in item_actualite %}
                    <div class="carousel-item {% if loop.first %} active {% endif %}" style="background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.6)), url('{{ ImageAsset.thumb(item.image, 'thumb_background') }}') no-repeat center center;background-size: cover;">
                        <div class="d-flex align-items-center h-75">
                            <div class="text-left text-white w-75 pb-10 ">
                                <h2 class="h2-light">{{item.titre}}</h2>
                                {{item.texte|raw}}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endif %}
